<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
		<!-- Blazor WebAssembly principal -->
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="10.0.0" PrivateAssets="all" />

		<!-- Autenticaciï¿½n -->
		<PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="10.0.0" />

		<!-- Blazored LocalStorage -->
		<PackageReference Include="Blazored.LocalStorage" Version="4.5.0" />

		<!-- Blazored Toast (si lo usas para notificaciones) -->
		<PackageReference Include="Blazored.Toast" Version="4.2.1" />
		<PackageReference Include="Microsoft.FluentUI.AspNetCore.Components" Version="4.13.1" />
	</ItemGroup>

</Project>
